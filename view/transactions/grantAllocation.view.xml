										<Input value="{U_BsLine}" visible="false" />
										<Input value="{U_Validated}" visible="false"/>
										<Input value="{U_ExAmLC}" enabled="false"/>
										<Input value="{U_ExAmUSD}" enabled="false"/>
										<Input value="{U_ExAmGC}" enabled="false"/>
